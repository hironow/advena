{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major updates"
    }
  ],
  "schedule": [
    "every weekend"
  ],
  "timezone": "Asia/Tokyo"
}